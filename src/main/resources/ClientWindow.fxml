<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>

<VBox fx:controller="client.graphics.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <HBox minHeight="300">
        <VBox fx:id="clientSide" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 20;">Client commands</Text>
            <HBox>
                <Button fx:id="upload" text="Upload" />
            </HBox>
            <TextField fx:id="clientPath" editable="false" />
            <ListView fx:id="clientView" />
        </VBox>
        <VBox fx:id="serverSide" HBox.hgrow="ALWAYS">
            <Text style="-fx-font-size: 20;">Server commands</Text>
            <HBox>
                <Button fx:id="mkdir" text="New directory" />
                <Button fx:id="touch" text="New file" />
                <Button fx:id="remove" text="Remove" />
                <Button fx:id="download" text="Download" />
            </HBox>
            <TextField fx:id="serverPath" editable="false" />
            <ListView fx:id="serverView" />
        </VBox>
    </HBox>
    <TextArea VBox.vgrow="ALWAYS" fx:id="textArea" editable="false" />
    <HBox minHeight="30">
        <TextField fx:id="textField" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" onAction="#clickAction" />
        <Button fx:id="sendButton" VBox.vgrow="ALWAYS" minWidth="100" text="Send" onAction="#clickAction"/>
    </HBox>
</VBox>
