<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.ClientController">

    <HBox minHeight="300" VBox.vgrow="ALWAYS">
        <VBox fx:id="clientSide" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TextField fx:id="clientPath" editable="false" />
            <ListView fx:id="clientView" />
        </VBox>
        <VBox fx:id="serverSide" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TextField fx:id="serverPath" editable="false" />
            <ListView fx:id="serverView" />
        </VBox>
    </HBox>

    <VBox>
        <HBox alignment="CENTER">
            <Button fx:id="upload" prefWidth="250.0" text="Upload" />
            <Button fx:id="download" prefWidth="250.0" text="Download" />
            <Button fx:id="get" prefWidth="250.0" text="Update list" />
        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="mkdir" prefWidth="250.0" text="New directory" />
            <Button fx:id="touch" prefWidth="250.0" text="New file" />
            <Button fx:id="remove" prefWidth="250.0" text="Remove" />
        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="help" prefWidth="750.0" text="Help" />
        </HBox>
    </VBox>

    <TextArea fx:id="logArea" editable="false" prefHeight="214.0" prefWidth="750.0" VBox.vgrow="ALWAYS">
      <font>
         <Font name="Arial Bold" size="18.0" />
      </font>
    </TextArea>
</VBox>
