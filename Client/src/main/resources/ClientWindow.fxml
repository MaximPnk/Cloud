<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="graphics.Controller">

    <HBox VBox.vgrow="ALWAYS" minHeight="300">
        <VBox fx:id="clientSide" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TextField fx:id="clientPath" editable="false" />
            <ListView fx:id="clientView" />
        </VBox>
        <VBox fx:id="serverSide" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <TextField fx:id="serverPath" editable="false" />
            <ListView fx:id="serverView" />
        </VBox>
    </HBox>

    <VBox>
        <HBox alignment="CENTER">
            <Button prefWidth="250.0" fx:id="upload" text="Upload" />
            <Button prefWidth="250.0" fx:id="download" text="Download" />
            <Button prefWidth="250.0" fx:id="get" text="Update list" />
        </HBox>
        <HBox alignment="CENTER">
            <Button prefWidth="250.0" fx:id="mkdir" text="New directory" />
            <Button prefWidth="250.0" fx:id="touch" text="New file" />
            <Button prefWidth="250.0" fx:id="remove" text="Remove" />
        </HBox>
        <HBox alignment="CENTER">
            <Button prefWidth="750.0" fx:id="help" text="Help" />
        </HBox>
    </VBox>

    <TextArea fx:id="logArea" editable="false" VBox.vgrow="ALWAYS" />
</VBox>
